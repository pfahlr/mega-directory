<%- include('../partials/page-start', { title: 'Category & Location Approvals', active: 'category-locations' }) %>
<section class="panel stack gap-md">
  <header class="panel-header">
    <div>
      <p class="eyebrow">Directories</p>
      <h2>Approve new category + location pairs</h2>
      <p class="muted">Review crawler discoveries, then promote qualified combinations into the directory database.</p>
    </div>
    <div class="badge">Pending <strong><%= pending.length %></strong></div>
  </header>

  <p class="muted">Currently tracking <strong><%= totalApproved %></strong> approved directories.</p>

  <% if (typeof addedCount === 'number' && addedCount > 0) { %>
    <div class="alert success">Approved <strong><%= addedCount %></strong> new director<%= addedCount === 1 ? 'y' : 'ies' %>.</div>
  <% } %>

  <% if (!pending.length) { %>
    <p class="empty-state">No new discoveries need approval right now.</p>
  <% } else { %>
    <form method="POST" action="/category-locations" class="stack gap-lg">
      <div class="table-wrapper">
        <table class="listing-table category-location-table">
          <thead>
            <tr>
              <th scope="col" class="col-action">Approve</th>
              <th scope="col">Category + location</th>
              <th scope="col">Discovery signals</th>
              <th scope="col">Sample listings</th>
            </tr>
          </thead>
          <tbody>
            <% pending.forEach((candidate, index) => { %>
              <% const discoveredLabel = candidate.discoveredAt ? new Date(candidate.discoveredAt).toLocaleString('en-US', { dateStyle: 'medium', timeStyle: 'short' }) : 'Unknown'; %>
              <tr>
                <td class="table-checkbox">
                  <label class="checkbox-label">
                    <input type="checkbox" name="candidates[<%= index %>][approve]" value="1" />
                    <span class="sr-only">Approve <%= candidate.category %> — <%= candidate.location %></span>
                  </label>
                  <input type="hidden" name="candidates[<%= index %>][id]" value="<%= candidate.id %>" />
                </td>
                <td class="category-location-table__details">
                  <p class="eyebrow"><%= candidate.category %></p>
                  <h3 class="category-location-table__title"><%= candidate.location %></h3>
                  <p class="muted">Slug <strong><%= candidate.slug %></strong></p>
                  <p class="muted">Discovered <strong><%= discoveredLabel %></strong> • Source <strong><%= candidate.source || 'Unknown' %></strong></p>
                </td>
                <td class="category-location-table__signals">
                  <p class="muted">Listings ready: <strong><%= typeof candidate.listingsCount === 'number' ? candidate.listingsCount : 'Unknown' %></strong></p>
                  <p class="muted"><%= candidate.notes || 'No crawler notes yet.' %></p>
                </td>
                <td>
                  <% if (Array.isArray(candidate.sampleListings) && candidate.sampleListings.length) { %>
                    <ul class="evidence-list">
                      <% candidate.sampleListings.slice(0, 4).forEach((listing) => { %>
                        <li><%= listing %></li>
                      <% }) %>
                    </ul>
                  <% } else { %>
                    <p class="muted">No sample listings provided.</p>
                  <% } %>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>

      <div class="form-actions">
        <button type="submit" class="btn primary">Add selected directories</button>
        <p class="muted">Approved pairs move to the in-memory database for this demo.</p>
      </div>
    </form>
  <% } %>
</section>
<%- include('../partials/page-end') %>
