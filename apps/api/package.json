{
  "name": "mega-directory-api",
  "private": true,
  "version": "0.1.0",
  "type": "commonjs",
  "main": "dist/server.js",
  "types": "dist/server.d.ts",
  "scripts": {
    "postinstall": "prisma generate --schema=../../db/schema.prisma",
    "prebuild": "prisma generate --schema=../../db/schema.prisma",
    "dev": "npm run build && node dist/server.js",
    "dev:watch": "tsc -p tsconfig.json --watch",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "test": "vitest run",
    "test:unit": "vitest run test/unit",
    "test:integration": "vitest run test/integration",
    "test:e2e": "vitest run test/e2e",
    "test:watch": "vitest watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "db:migrate:dev": "prisma migrate dev --schema=../../db/schema.prisma",
    "db:migrate:create": "prisma migrate dev --create-only --schema=../../db/schema.prisma",
    "db:migrate:deploy": "prisma migrate deploy --schema=../../db/schema.prisma",
    "db:migrate:status": "prisma migrate status --schema=../../db/schema.prisma",
    "db:migrate:reset": "prisma migrate reset --schema=../../db/schema.prisma",
    "db:push": "prisma db push --schema=../../db/schema.prisma",
    "db:seed": "prisma db seed --schema=../../db/schema.prisma",
    "db:studio": "prisma studio --schema=../../db/schema.prisma",
    "db:generate": "prisma generate --schema=../../db/schema.prisma"
  },
  "dependencies": {
    "@mega-directory/config": "file:../../packages/shared-config",
    "@prisma/client": "^6.19.0",
    "express": "^4.21.2",
    "express-rate-limit": "^8.2.1",
    "ioredis": "^5.8.2",
    "jsonwebtoken": "^9.0.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "undici": "^5.28.4",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@testcontainers/postgresql": "^11.8.1",
    "@types/express": "^4.17.25",
    "@types/ioredis": "^4.28.10",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.10.1",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@vitest/coverage-v8": "^4.0.9",
    "@vitest/ui": "^4.0.9",
    "prisma": "^6.19.0",
    "supertest": "^7.1.4",
    "testcontainers": "^11.8.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.9"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}
