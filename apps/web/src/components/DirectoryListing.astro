---
interface DirectoryListing {
  slug: string;
  name: string;
  url: string;
  summary: string;
  description?: string;
  badges?: string[];
  score?: number;
  scoreTooltip?: string;
  highlights?: string[];
  locationLabel?: string;
}

const {
  listing,
  rank,
  mapFocusTarget = null,
}: {
  listing: DirectoryListing;
  rank: number;
  mapFocusTarget?: string | null;
} = Astro.props;
const headingId = `directory-listing-${listing.slug}`;
const tooltipId = `${headingId}-tooltip`;
const showTooltip = Boolean(listing.scoreTooltip);
const badges = listing.badges ?? [];
const highlights = listing.highlights ?? [];
const showMapButton = Boolean(mapFocusTarget && listing.slug);
---

<li>
  <article class="card-surface flex flex-col gap-4 p-5" aria-labelledby={headingId}>
    <header class="flex flex-wrap items-start gap-4">
    <div class="min-w-0 flex-1">
      <p class="text-xs font-semibold uppercase tracking-[0.3em] text-emerald-300">Rank #{rank}</p>
      <div class="mt-1 flex flex-col gap-1">
        <h3 id={headingId} class="text-xl font-semibold text-white">
          <a
            class="transition hover:text-emerald-200 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-4 focus-visible:outline-emerald-400"
            href={listing.url}
            rel="noopener noreferrer"
            target="_blank"
          >
            {listing.name}
          </a>
        </h3>
        <div class="flex items-center gap-2 text-sm text-slate-400">
          {listing.locationLabel && <p>{listing.locationLabel}</p>}
          {showMapButton && (
            <button
              type="button"
              class="map-pin-trigger"
              data-map-focus={mapFocusTarget}
              data-map-slug={listing.slug}
              aria-label={`Center map on ${listing.name}`}
            >
              <svg viewBox="0 0 20 20" width="16" height="16" aria-hidden="true">
                <path
                  fill="currentColor"
                  d="M10 2.5a5.5 5.5 0 0 0-5.5 5.5c0 4.125 5.5 9.5 5.5 9.5s5.5-5.375 5.5-9.5A5.5 5.5 0 0 0 10 2.5Zm0 7.5a2 2 0 1 1 0-4 2 2 0 0 1 0 4Z"
                />
              </svg>
              <span class="sr-only">Focus map</span>
            </button>
          )}
        </div>
      </div>
    </div>
    <div class="flex flex-col items-end text-right">
      <p class="text-xs uppercase tracking-[0.3em] text-slate-400">Score</p>
      <div class="mt-1 flex items-center gap-2">
        <p class="text-3xl font-semibold text-emerald-300">{typeof listing.score === 'number' ? listing.score.toFixed(1) : '—'}</p>
        {showTooltip && (
          <span
            class="tooltip-badge tooltip"
            data-tooltip={listing.scoreTooltip}
            role="img"
            aria-describedby={tooltipId}
            tabindex="0"
          >
            i
          </span>
        )}
      </div>
      {showTooltip && (
        <span id={tooltipId} class="sr-only">Score breakdown: {listing.scoreTooltip}</span>
      )}
    </div>
  </header>

  <p class="text-sm text-slate-300">{listing.summary}</p>

  <details class="listing-details">
    <summary>
      <span class="chevron" aria-hidden="true">›</span>
      Reviewer notes & highlights
    </summary>
    <div class="listing-details__content">
      {listing.description && <p class="text-sm text-slate-300">{listing.description}</p>}
      {highlights.length > 0 && (
        <ul class="mt-3 space-y-2 text-sm text-slate-200">
          {highlights.map((highlight) => (
            <li class="flex items-start gap-2">
              <span class="mt-1 inline-block h-1.5 w-1.5 rounded-full bg-emerald-300"></span>
              <span>{highlight}</span>
            </li>
          ))}
        </ul>
      )}
    </div>
  </details>

  {badges.length > 0 && (
    <div class="flex flex-wrap gap-2">
      {badges.map((badge) => (
        <span class="inline-flex items-center rounded-full border border-white/10 bg-white/5 px-3 py-1 text-xs text-slate-200">
          {badge}
        </span>
      ))}
    </div>
  )}
  </article>
</li>
