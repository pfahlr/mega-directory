---
import BaseLayout from '../layouts/BaseLayout.astro';
import {
  buildDirectorySeoMetadata,
  buildDirectoryMapPins,
  shouldRenderDirectoryMap,
} from '../lib/directory-helpers.js';
import { buildDirectoryResponseTargets } from '../lib/directory-routing.js';
import DirectoryListing from './DirectoryListing.astro';
import DirectoryMap from './DirectoryMap.astro';

const {
  directory,
  navItems,
  heroStats,
  listings = [],
  totalListings = listings.length,
  subcategoryNav = [],
  featuredHero = null,
  featuredTierTwo = [],
  mapListings = directory?.listings ?? [],
  subcategorySlug = null,
} = Astro.props;

const heroSubtitle = typeof directory?.heroSubtitle === 'string' ? directory.heroSubtitle.trim() : '';
const directorySeo = buildDirectorySeoMetadata(directory);
const pageTitle = directorySeo.title;
const pageDescription = directorySeo.description;
const metaKeywords = directorySeo.keywords;
const routeMeta = directory?.routes ?? {};
const activeRouteTargets = buildDirectoryResponseTargets(directory, subcategorySlug ?? '');
const canonicalTarget =
  activeRouteTargets.canonicalUrl ?? activeRouteTargets.path ?? routeMeta.canonicalUrl ?? routeMeta.subdirectory;
const ogImage = directorySeo.image;
const seoPayload = {
  title: pageTitle,
  description: pageDescription,
  canonicalUrl: canonicalTarget,
  image: ogImage,
  keywords: metaKeywords ?? undefined,
  openGraph: {
    image: ogImage,
    title: pageTitle,
    description: pageDescription,
    type: 'website',
  },
  twitter: {
    image: ogImage,
    title: pageTitle,
    description: pageDescription,
  },
  jsonLd: {
    '@context': 'https://schema.org',
    '@type': 'CollectionPage',
    name: pageTitle,
    description: pageDescription,
    url: canonicalTarget,
  },
};

const hasSubcategoryNav = subcategoryNav.length > 0;
const activeFilter = hasSubcategoryNav
  ? subcategoryNav.find((item) => item.active) ?? subcategoryNav[0]
  : null;
const filterLabel = activeFilter?.label ?? 'All subcategories';
const filterDescription = activeFilter?.description ?? '';
const normalizedTierTwo = Array.isArray(featuredTierTwo) ? featuredTierTwo : [];
const featuredCount = (featuredHero ? 1 : 0) + normalizedTierTwo.length;
const hasFeaturedSection = featuredCount > 0;
const visibleListingCount = listings.length + featuredCount;
const formatScore = (value) =>
  typeof value === 'number' && Number.isFinite(value) ? value.toFixed(1) : '—';
const heroHighlights =
  featuredHero?.listing?.highlights && Array.isArray(featuredHero.listing.highlights)
    ? featuredHero.listing.highlights
    : [];
const heroBadges = Array.isArray(featuredHero?.listing?.badges)
  ? featuredHero.listing.badges
  : [];
const featuredHeroHeadingId = featuredHero?.listing?.slug
  ? `featured-hero-${featuredHero.listing.slug}`
  : 'featured-hero';

const filterSummary = hasSubcategoryNav
  ? `Showing ${visibleListingCount} of ${totalListings} listings${
      activeFilter?.slug ? ` filtered to ${filterLabel}` : ''
    }.`
  : '';

const filterLinkClass = (isActive) =>
  [
    'inline-flex items-center gap-3 rounded-full border px-4 py-2 text-sm transition',
    'focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-4 focus-visible:outline-emerald-400',
    isActive
      ? 'border-emerald-400 text-white bg-emerald-400/10'
      : 'border-white/20 text-slate-200 hover:border-emerald-400/80',
  ].join(' ');

const safeMapListings = Array.isArray(mapListings) ? mapListings : [];
const mapPins = buildDirectoryMapPins(directory, safeMapListings);
const mapElementId = `directory-map-${directory.slug ?? directory.location?.slug ?? 'directory'}`;
const showDirectoryMap = shouldRenderDirectoryMap(directory, mapPins);
---

<BaseLayout
  title={pageTitle}
  description={pageDescription}
  navItems={navItems}
  seo={seoPayload}
>
  {showDirectoryMap && (
    <Fragment slot="head">
      <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/ol@7.5.2/ol.css" />
    </Fragment>
  )}
  <section id="hero" class="space-y-6">
    <nav class="text-xs uppercase tracking-[0.3em] text-emerald-300">
      <a class="text-slate-400 transition hover:text-white" href="/directories">Directories</a>
      <span class="mx-2 text-slate-600">/</span>
      <span>{directory.category.name}</span>
      <span class="mx-2 text-slate-600">/</span>
      <span>{directory.location.name}</span>
    </nav>
    <div class="space-y-3">
      <h1 class="text-3xl font-semibold text-white">{directory.heroTitle}</h1>
      {heroSubtitle && <p class="text-sm text-slate-300">{heroSubtitle}</p>}
    </div>
    <dl class="grid gap-4 sm:grid-cols-2 lg:grid-cols-4">
      {heroStats.map((stat) => (
        <div class="rounded-2xl border border-white/10 bg-white/5 p-4 text-center">
          <dt class="text-xs uppercase tracking-[0.3em] text-slate-400">{stat.label}</dt>
          <dd class="text-2xl font-semibold text-white">{stat.value}</dd>
        </div>
      ))}
    </dl>
  </section>

  {showDirectoryMap && (
    <DirectoryMap
      pins={mapPins}
      directoryName={directory.heroTitle ?? directory.name}
      locationName={directory.location?.name}
      directorySlug={directory.slug}
      mapId={mapElementId}
      initialSlug={mapPins[0]?.slug}
    />
  )}

  <section id="listings" class="space-y-6">
    <div class="flex flex-col gap-2 md:flex-row md:items-end md:justify-between">
      <div>
        <p class="text-sm font-semibold uppercase tracking-[0.3em] text-emerald-300">Score-aware view</p>
        <h2 class="text-2xl font-semibold text-white">Listings sorted by reviewer score</h2>
        <p class="text-sm text-slate-400">
          Hover or focus the “i” badge next to each score to view a tooltip describing how that
          directory weighted QA, ADA, and reviewer notes. Expand a card to read detailed reviewer
          notes and highlights.
        </p>
      </div>
      <div class="text-sm text-slate-400 text-left md:text-right">
        {hasSubcategoryNav ? (
          <div class="space-y-1">
            <p>{filterSummary}</p>
            {filterDescription && <p class="text-xs text-slate-500">{filterDescription}</p>}
          </div>
        ) : (
          <p>Updated weekly with crawler + admin data</p>
        )}
      </div>
    </div>

    {hasSubcategoryNav && (
      <div class="rounded-2xl border border-white/10 bg-white/5 p-4 sm:p-5">
        <div class="space-y-2">
          <p class="text-xs font-semibold uppercase tracking-[0.3em] text-emerald-300">Subcategories</p>
          <div>
            <h3 class="text-lg font-semibold text-white">{filterLabel}</h3>
            <p class="text-sm text-slate-400">
              Showing {visibleListingCount} of {totalListings} listings
              {activeFilter?.slug ? ` in ${filterLabel}` : ''}.
            </p>
            {filterDescription && <p class="text-xs text-slate-500">{filterDescription}</p>}
          </div>
        </div>
        <div class="mt-4 flex flex-wrap gap-3">
          {subcategoryNav.map((item) => (
            <a
              class={filterLinkClass(item.active)}
              aria-current={item.active ? 'page' : undefined}
              href={item.href}
            >
              <span>{item.label}</span>
              <span class="rounded-full border border-white/20 px-2 py-0.5 text-xs text-slate-300">
                {item.count}
              </span>
            </a>
          ))}
        </div>
      </div>
    )}

    {hasFeaturedSection && (
      <div class="space-y-4 rounded-2xl border border-white/10 bg-white/5 p-5 sm:p-6">
        <div class="flex flex-col gap-1 md:flex-row md:items-center md:justify-between">
          <div>
            <p class="text-xs font-semibold uppercase tracking-[0.3em] text-emerald-300">Featured placements</p>
            <h3 class="text-xl font-semibold text-white">Hero + tier-two listings</h3>
          </div>
          <p class="text-sm text-slate-400">{featuredCount} featured slot{featuredCount === 1 ? '' : 's'}</p>
        </div>

        {featuredHero && featuredHero.listing && (
          <article class="glass-panel flex flex-col gap-4 p-6" aria-labelledby={featuredHeroHeadingId}>
            <header class="flex flex-wrap items-start gap-5">
              <div class="min-w-0 flex-1 space-y-1">
                <p class="text-xs font-semibold uppercase tracking-[0.3em] text-emerald-300">
                  {featuredHero.slot?.label ?? 'Featured hero'}
                </p>
                <div class="flex flex-wrap items-center gap-3">
                  {featuredHero.listing.url ? (
                    <a
                      id={featuredHeroHeadingId}
                      class="text-2xl font-semibold text-white transition hover:text-emerald-200 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-4 focus-visible:outline-emerald-400"
                      href={featuredHero.listing.url}
                      rel="noopener noreferrer"
                      target="_blank"
                    >
                      {featuredHero.listing.name}
                    </a>
                  ) : (
                    <span id={featuredHeroHeadingId} class="text-2xl font-semibold text-white">
                      {featuredHero.listing.name}
                    </span>
                  )}
                  {showDirectoryMap && featuredHero.listing.slug && (
                    <button
                      type="button"
                      class="map-pin-trigger"
                      data-map-focus={mapElementId}
                      data-map-slug={featuredHero.listing.slug}
                      aria-label={`Center map on ${featuredHero.listing.name}`}
                    >
                      <svg viewBox="0 0 20 20" width="16" height="16" aria-hidden="true">
                        <path
                          fill="currentColor"
                          d="M10 2.5a5.5 5.5 0 0 0-5.5 5.5c0 4.125 5.5 9.5 5.5 9.5s5.5-5.375 5.5-9.5A5.5 5.5 0 0 0 10 2.5Zm0 7.5a2 2 0 1 1 0-4 2 2 0 0 1 0 4Z"
                        />
                      </svg>
                      <span class="sr-only">Focus map</span>
                    </button>
                  )}
                </div>
                {featuredHero.listing.locationLabel && (
                  <p class="text-sm text-slate-400">{featuredHero.listing.locationLabel}</p>
                )}
              </div>
              <div class="text-right">
                <p class="text-xs uppercase tracking-[0.3em] text-slate-400">Score</p>
                <p class="text-4xl font-semibold text-emerald-300">{formatScore(featuredHero.listing.score)}</p>
              </div>
            </header>

            {(featuredHero.listing.summary ?? featuredHero.listing.description) && (
              <p class="text-sm text-slate-200">
                {featuredHero.listing.summary ?? featuredHero.listing.description}
              </p>
            )}

            {heroHighlights.length > 0 && (
              <ul class="space-y-2 text-sm text-slate-200">
                {heroHighlights.slice(0, 3).map((highlight) => (
                  <li class="flex items-start gap-2">
                    <span class="mt-1 inline-block h-1.5 w-1.5 rounded-full bg-emerald-300"></span>
                    <span>{highlight}</span>
                  </li>
                ))}
              </ul>
            )}

            {heroBadges.length > 0 && (
              <div class="flex flex-wrap gap-2">
                {heroBadges.map((badge) => (
                  <span class="inline-flex items-center rounded-full border border-white/10 bg-white/5 px-3 py-1 text-xs text-slate-200">
                    {badge}
                  </span>
                ))}
              </div>
            )}
          </article>
        )}

        {normalizedTierTwo.length > 0 && (
          <div class="grid gap-4 md:grid-cols-2">
            {normalizedTierTwo.map(({ slot, listing }) => {
              if (!listing) {
                return null;
              }
              const tileBadges = Array.isArray(listing.badges) ? listing.badges : [];
              const tileId = listing.slug ? `featured-tier-two-${listing.slug}` : undefined;
              return (
                <article class="card-surface flex h-full flex-col gap-3 p-5" aria-labelledby={tileId}>
                  <p class="text-xs font-semibold uppercase tracking-[0.3em] text-emerald-300">
                    {slot?.label ?? 'Tier-two highlight'}
                  </p>
                  <div class="flex flex-wrap items-center gap-2">
                    {listing.url ? (
                      <a
                        id={tileId}
                        class="text-lg font-semibold text-white transition hover:text-emerald-200 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-4 focus-visible:outline-emerald-400"
                        href={listing.url}
                        rel="noopener noreferrer"
                        target="_blank"
                      >
                        {listing.name}
                      </a>
                    ) : (
                      <span id={tileId} class="text-lg font-semibold text-white">
                        {listing.name}
                      </span>
                    )}
                    {showDirectoryMap && listing.slug && (
                      <button
                        type="button"
                        class="map-pin-trigger"
                        data-map-focus={mapElementId}
                        data-map-slug={listing.slug}
                        aria-label={`Center map on ${listing.name}`}
                      >
                        <svg viewBox="0 0 20 20" width="16" height="16" aria-hidden="true">
                          <path
                            fill="currentColor"
                            d="M10 2.5a5.5 5.5 0 0 0-5.5 5.5c0 4.125 5.5 9.5 5.5 9.5s5.5-5.375 5.5-9.5A5.5 5.5 0 0 0 10 2.5Zm0 7.5a2 2 0 1 1 0-4 2 2 0 0 1 0 4Z"
                          />
                        </svg>
                        <span class="sr-only">Focus map</span>
                      </button>
                    )}
                  </div>
                  {(listing.summary ?? listing.description) && (
                    <p class="text-sm text-slate-300">{listing.summary ?? listing.description}</p>
                  )}
                  <div class="flex flex-wrap items-center justify-between gap-2 text-sm text-slate-400">
                    {listing.locationLabel && <span>{listing.locationLabel}</span>}
                    <span class="text-white">Score {formatScore(listing.score)}</span>
                  </div>
                  {tileBadges.length > 0 && (
                    <div class="flex flex-wrap gap-2">
                      {tileBadges.map((badge) => (
                        <span class="inline-flex items-center rounded-full border border-white/10 bg-white/5 px-3 py-1 text-xs text-slate-200">
                          {badge}
                        </span>
                      ))}
                    </div>
                  )}
                </article>
              );
            })}
          </div>
        )}
      </div>
    )}

    <ol class="space-y-5" role="list">
      {listings.map((listing, index) => (
        <DirectoryListing
          listing={listing}
          rank={index + 1 + featuredCount}
          mapFocusTarget={showDirectoryMap ? mapElementId : null}
        />
      ))}
    </ol>
  </section>

  <section id="review-notes" class="glass-panel space-y-4 p-6">
    <div>
      <p class="text-sm font-semibold uppercase tracking-[0.3em] text-emerald-300">Reviewer notes</p>
      <h2 class="text-xl font-semibold text-white">How this directory is maintained</h2>
    </div>
    <p class="text-sm text-slate-300">
      {directory.stats?.reviewers ?? 'Ops & editorial reviewers'} handle verification, ADA checks, and
      scoring adjustments. Tooltips reflect their weighting for the current review cycle.
    </p>
    <p class="text-sm text-slate-400">
      Need to suggest an edit or submit a new listing? Reach out via the admin portal or email
      support@megadirectory.local.
    </p>
  </section>
</BaseLayout>
